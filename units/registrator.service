[Unit]
Description=Registrator - flannel network
After=skydns.service
Requires=skydns.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=0
EnvironmentFile=-/etc/environment
ExecStartPre=-/usr/bin/docker kill registrator
ExecStartPre=-/usr/bin/docker rm registrator
ExecStartPre=/usr/bin/docker pull gliderlabs/registrator
ExecStart=/usr/bin/docker run --name registrator \
  --volume /var/run/docker.sock:/tmp/docker.sock \
  gliderlabs/registrator \
  -h ${HOSTNAME} \
  -internal \
  -ttl 30 \
  -ttl-refresh 20 \ 
  skydns2://${COREOS_PRIVATE_IPV4}:2379/skydns.local
ExecStop=/usr/bin/docker stop registrator

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
